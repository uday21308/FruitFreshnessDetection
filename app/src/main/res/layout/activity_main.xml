<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/backkk"> <!-- Custom Background Image -->


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruit Freshness Detector"
        android:textSize="24sp"
    android:textColor="@color/red"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/poppins_bold"
    android:layout_marginTop="16dp"
    android:padding="12dp"
    android:shadowColor="#80000000"
    android:shadowRadius="3"
    android:shadowDx="2"
    android:shadowDy="2"
    android:gravity="center" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="24dp"
        android:background="@drawable/border"
        android:contentDescription="Captured Image" />

    <Button
        android:id="@+id/captureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient_background"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from Gallery"
        android:layout_below="@id/captureButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/galleryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Result will appear here"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:fontFamily="@font/poppins_light"
        android:padding="12dp"
        android:shadowColor="#665F5F"
        android:shadowRadius="3"
        android:shadowDx="2"
        android:shadowDy="2"
        android:gravity="center" />
</RelativeLayout>
